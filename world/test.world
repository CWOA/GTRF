<?xml version="1.0"?>
<sdf version="1.4">
  <world name="default">

    <!-- Add a sun object -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Add a field-like ground plane -->
    <include>
      <uri>model://field_ground_plane</uri>
    </include>

    <!-- Add cow object at the origin -->
    <model name="cow">
      <pose>4 0 0  0 0 0</pose>
      <static>true</static>
      <link name="body">
        <visual name="visual">
          <geometry>
            <mesh>
              <uri>model://cow_normalised.dae</uri>
            </mesh>
          </geometry>
        </visual>
      </link>
    </model>

    <!-- To add a sky with moving clouds -->
    <scene>
      <sky>
        <clouds>
          <speed>9</speed>
        </clouds>
      </sky>
    </scene>

